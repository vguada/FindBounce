Cell[BoxData[{
 RowBox[{
  RowBox[{
   RowBox[{"U", "[", "\[CurlyPhi]_", "]"}], ":=", 
   RowBox[{
    RowBox[{"0.5", 
     RowBox[{"\[CurlyPhi]", "^", "2"}]}], "+", 
    RowBox[{".5", 
     RowBox[{"\[CurlyPhi]", "^", "3"}]}], "+", 
    RowBox[{".1", " ", 
     RowBox[{"\[CurlyPhi]", "^", "4"}]}]}]}], ";"}], "\[IndentingNewLine]", 
 RowBox[{
  RowBox[{"extrema", "=", 
   RowBox[{"Block", "[", 
    RowBox[{
     RowBox[{"{", "\[CurlyPhi]", "}"}], ",", 
     RowBox[{"\[CurlyPhi]", "/.", 
      RowBox[{"Sort", "@", 
       RowBox[{"NSolve", "[", 
        RowBox[{
         RowBox[{
          RowBox[{"(", 
           RowBox[{"D", "[", 
            RowBox[{
             RowBox[{"U", "[", "\[CurlyPhi]", "]"}], ",", "\[CurlyPhi]"}], 
            "]"}], ")"}], "==", "0"}], ",", "\[CurlyPhi]"}], "]"}]}]}]}], 
    "]"}]}], ";"}], "\[IndentingNewLine]", 
 RowBox[{"bf", " ", "=", " ", 
  RowBox[{"FindBounce", "[", " ", 
   RowBox[{
    RowBox[{"U", "[", "\[CurlyPhi]", "]"}], ",", 
    RowBox[{"{", "\[CurlyPhi]", "}"}], ",", 
    RowBox[{"{", 
     RowBox[{
      RowBox[{"extrema", "[", 
       RowBox[{"[", "1", "]"}], "]"}], ",", 
      RowBox[{"extrema", "[", 
       RowBox[{"[", "3", "]"}], "]"}]}], "}"}]}], "]"}]}]}], "Input",
