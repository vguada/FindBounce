Cell[BoxData[{
 RowBox[{
  RowBox[{
   RowBox[{"U", "[", "x_", "]"}], ":=", 
   RowBox[{
    RowBox[{"0.5", 
     RowBox[{"x", "^", "2"}]}], "-", 
    RowBox[{".5", 
     RowBox[{"x", "^", "3"}]}], "+", 
    RowBox[{".1", " ", 
     RowBox[{"x", "^", "4"}]}]}]}], ";"}], "\[IndentingNewLine]", 
 RowBox[{
  RowBox[{"extrema", "=", 
   RowBox[{"Block", "[", 
    RowBox[{
     RowBox[{"{", "x", "}"}], ",", 
     RowBox[{"x", "/.", 
      RowBox[{"Sort", "@", 
       RowBox[{"NSolve", "[", 
        RowBox[{
         RowBox[{
          RowBox[{"(", 
           RowBox[{"D", "[", 
            RowBox[{
             RowBox[{"U", "[", "x", "]"}], ",", "x"}], "]"}], ")"}], "==", 
          "0"}], ",", "x"}], "]"}]}]}]}], "]"}]}], 
  ";"}], "\[IndentingNewLine]", 
 RowBox[{"bf", " ", "=", " ", 
