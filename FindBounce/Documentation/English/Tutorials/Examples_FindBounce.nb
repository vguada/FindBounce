Cell["Find the bounce configuration of a single potential U(\[CurlyPhi]):", \
"Text", "ApplicationNotes",
 CellID->436901123,ExpressionUUID->"254a2e61-3473-456d-a30a-0462309267b8"],

Cell[BoxData[{
 RowBox[{
  RowBox[{
   RowBox[{"U", "[", "x_", "]"}], ":=", 
   RowBox[{
    RowBox[{"0.5", 
     RowBox[{"x", "^", "2"}]}], "-", 
    RowBox[{".5", 
     RowBox[{"x", "^", "3"}]}], "+", 
    RowBox[{".1", " ", 
     RowBox[{"x", "^", "4"}]}]}]}], ";"}], "\[IndentingNewLine]", 
 RowBox[{
  RowBox[{"extrema", "=", 
   RowBox[{"Block", "[", 
    RowBox[{
     RowBox[{"{", "x", "}"}], ",", 
     RowBox[{"x", "/.", 
      RowBox[{"Sort", "@", 
       RowBox[{"NSolve", "[", 
        RowBox[{
         RowBox[{
          RowBox[{"(", 
           RowBox[{"D", "[", 
            RowBox[{
             RowBox[{"U", "[", "x", "]"}], ",", "x"}], "]"}], ")"}], "==", 
          "0"}], ",", "x"}], "]"}]}]}]}], "]"}]}], 
  ";"}], "\[IndentingNewLine]", 
 RowBox[{"bf", " ", "=", " ", 
  RowBox[{"FindBounce", "[", " ", 
   RowBox[{
    RowBox[{"U", "[", "\[CurlyPhi]", "]"}], ",", 
    RowBox[{"{", "\[CurlyPhi]", "}"}], ",", 
    RowBox[{"{", 
     RowBox[{
      RowBox[{"extrema", "[", 
       RowBox[{"[", "1", "]"}], "]"}], ",", 
      RowBox[{"extrema", "[", 
       RowBox[{"[", "3", "]"}], "]"}]}], "}"}]}], 
   "]"}]}], "\[IndentingNewLine]", 
 RowBox[{"BouncePlot", "[", 
  RowBox[{"bf", ",", 
   RowBox[{"PlotStyle", "\[Rule]", 
    RowBox[{"Darker", "[", 
     RowBox[{"Yellow", ",", "0.2"}], "]"}]}]}], 
  "]"}]}], "Input",ExpressionUUID->"53774bcd-ef38-4215-88ee-15086f8a0586"],

