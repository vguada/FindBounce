Cell[BoxData[
 RowBox[{"Module", "[", 
  RowBox[{
   RowBox[{"{", 
    RowBox[{
     RowBox[{"\[Epsilon]", " ", "=", " ", "1"}], ",", 
     RowBox[{"Vt", "=", "5"}], ",", 
     RowBox[{"\[Phi]m", "=", "10"}], ",", 
     RowBox[{"Vm", "=", 
      RowBox[{"-", "20"}]}], ",", 
     RowBox[{"\[Phi]p", "=", 
      RowBox[{"-", "5"}]}], ",", "Vp", ",", "\[CapitalDelta]Vp", ",", 
     "\[CapitalDelta]Vm", ",", "\[Alpha]", ",", "\[CapitalDelta]", ",", "Rt", 
     ",", "A"}], "}"}], ",", "\[IndentingNewLine]", "\t", 
   RowBox[{
    RowBox[{
     RowBox[{"{", 
      RowBox[{
      "Vp", ",", "\[CapitalDelta]Vm", ",", "\[CapitalDelta]Vp", ",", 
       "\[Alpha]", ",", "\[CapitalDelta]"}], "}"}], " ", "=", " ", 
     RowBox[{"{", 
      RowBox[{
       RowBox[{
        RowBox[{"-", "18"}], "+", 
        RowBox[{
         RowBox[{"(", 
          RowBox[{"\[Epsilon]", "-", "1"}], ")"}], "*", "3"}]}], ",", 
       RowBox[{"Vt", "-", "Vm"}], ",", 
       RowBox[{"Vt", "-", "Vp"}], ",", 
       RowBox[{
        RowBox[{"-", "\[Phi]p"}], "/", "\[Phi]m"}], ",", " ", 
       RowBox[{"\[CapitalDelta]Vp", "/", "\[CapitalDelta]Vm"}]}], "}"}]}], 
    ";", "\[IndentingNewLine]", "\t", "\[IndentingNewLine]", "\t", 
    RowBox[{"Rt", " ", "=", " ", 
     RowBox[{
      FractionBox[
       RowBox[{"Sqrt", "[", 
        RowBox[{"2", " ", 
         RowBox[{"(", 
          RowBox[{"1", " ", "+", " ", "\[Alpha]"}], ")"}], 
         RowBox[{"(", 
          RowBox[{"\[Alpha]", "+", "\[CapitalDelta]"}], ")"}]}], "]"}], 
       RowBox[{"1", " ", "-", " ", "\[CapitalDelta]"}]], 
      FractionBox["\[Phi]m", 
       RowBox[{"Sqrt", "[", "Vm", "]"}]]}]}], ";", "\[IndentingNewLine]", 
    "\t", 
    RowBox[{"A", " ", "=", " ", 
     RowBox[{
      RowBox[{"(", 
       RowBox[{"1", " ", "+", " ", 
        RowBox[{"Sqrt", "[", 
         RowBox[{"1", " ", "+", " ", 
          RowBox[{"2", " ", "\[CapitalDelta]Vp", " ", 
           FractionBox[
            SuperscriptBox["Rt", "2"], 
            SuperscriptBox["\[Phi]p", "2"]]}]}], "]"}]}], ")"}], "/", 
      RowBox[{"(", " ", 
       RowBox[{"\[CapitalDelta]Vp", " ", 
        FractionBox[
         SuperscriptBox["Rt", "2"], 
         SuperscriptBox["\[Phi]p", "3"]]}], ")"}]}]}], ";", 
    "\[IndentingNewLine]", "\t", "\[IndentingNewLine]", "\t", 
    RowBox[{
     RowBox[{"U", "[", "\[Phi]_", "]"}], " ", ":=", 
     RowBox[{"Piecewise", "[", 
      RowBox[{"{", 
       RowBox[{
        RowBox[{"{", 
         RowBox[{
          RowBox[{
           RowBox[{"(", 
            RowBox[{"Vp", " ", "+", " ", 
             RowBox[{
              FractionBox["\[CapitalDelta]Vp", 
               RowBox[{" ", 
                SuperscriptBox["\[Phi]p", "4"]}]], " ", 
              SuperscriptBox[
               RowBox[{"(", 
                RowBox[{"\[Phi]", "-", "\[Phi]p"}], ")"}], "4"]}]}], ")"}], 
           "-", "Vp"}], " ", ",", 
          RowBox[{"\[Phi]", "<", "0"}]}], "}"}], ",", 
        RowBox[{"{", 
         RowBox[{
